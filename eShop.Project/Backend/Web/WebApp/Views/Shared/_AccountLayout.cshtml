<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:500&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AccountLayout.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-fixed">
            <div class="container-fluid d-flex justify-content-between">
                <div class="d-flex justify-content-start" style="flex: 1;">
                    <a class="navbar-brand" asp-area="" asp-controller="Catalog" asp-action="Catalog">
                        <img src="~/assets/logo.png" alt="Logo" height="60">
                    </a>
                </div>
                <div class="d-flex justify-content-center" style="flex: 1;">
                    @if (User.Identity.IsAuthenticated)
                    {
                            <span class="nav-link" style="color: black; font-size: 24px; margin-right:10%;">@User.Identity.Name</span>
                    }
                </div>
                <div class="d-flex justify-content-end" style="flex: 1;">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Account" asp-action="Account"><i class="bi bi-person-check-fill fs-4 fw-bold"></i></a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Basket" asp-action="Basket"><i class="bi bi-bag fs-4 fw-bold"></i></a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Logout" asp-action="Logout"><i class="bi bi-box-arrow-right fs-4 fw-bold"></i> Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>