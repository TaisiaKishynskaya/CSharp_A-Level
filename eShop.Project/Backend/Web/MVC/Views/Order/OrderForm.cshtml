@model OrderRequest

<style>
    .btn-custom {
        width: 50%;
        display: block;
        margin: 20px auto 0;
        background-color: white;
        color: black;
        border: 1px solid black;
        font-size: 1.5em;
        font-weight: bold;
    }

        .btn-custom:hover {
            background-color: #f2f2f2;
        }

    body {
        background-color: gray;
    }

    .form-container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        width: 60%;
        height: 80%;
    }

    .form-group {
        text-align: center;
    }

        .form-group input {
            width: 50%;
            margin: 20px auto 0;
        }
</style>

<div class="d-flex justify-content-center align-items-center vh-75">
    <div class="form-container">
        <form asp-action="AddOrder" asp-controller="Order" method="post">
            <div class="form-group">
                <label for="Address" style="font-size: 22px;">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" required>
            </div>
            <button type="submit" class="btn btn-custom">Create Order</button>
        </form>
    </div>
</div>