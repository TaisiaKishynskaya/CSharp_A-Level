<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:500&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
</head>



<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light navbar-fixed">
            <div class="container-fluid">
                <a class="navbar-brand ms-3" asp-area="" asp-controller="Catalog" asp-action="Catalog">
                    <img src="~/assets/logo.png" alt="Logo" height="60">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="d-flex justify-content-start flex-grow-1">
                        <ul class="navbar-nav" style="margin-left: auto">
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Catalog" asp-action="Catalog">Catalog</a>
                            </li>
                        </ul>
                    </div>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Account" asp-action="Account"><i class="bi bi-person-check-fill fs-4 fw-bold"></i></a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Basket" asp-action="Basket"><i class="bi bi-bag fs-4 fw-bold"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Login" asp-action="Login"><i class="bi bi-person fs-4 fw-bold"></i></a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link" style="color: black" asp-area="" asp-controller="Login" asp-action="Login"><i class="bi bi-bag fs-4 fw-bold"></i></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
